---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog">
	<main class="max-w-5xl mx-auto px-6 py-20">
		<header class="mb-16">
			<h1 class="text-4xl font-black mb-4">Blog</h1>
		</header>

		<div class="grid gap-12">
			{posts.map((post) => (
				<article class="group">
					<a href={`/blog/${post.slug}/`} class="flex flex-col md:flex-row md:items-baseline gap-2 md:gap-8">
						<time class="text-sm font-medium text-text-muted tabular-nums min-w-[120px]">
							{post.data.pubDate.toLocaleDateString('fr-fr', {
								year: 'numeric',
								month: 'long',
								day: 'numeric',
							})}
						</time>
						<div>
							<h2 class="text-2xl font-bold group-hover:text-brand transition-colors mb-2">
								{post.data.title}
							</h2>
							<p class="text-text-muted leading-relaxed">
								{post.data.description}
							</p>
						</div>
					</a>
				</article>
			))}
		</div>
	</main>
</Layout>